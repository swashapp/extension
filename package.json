{
  "name": "swash-extension",
  "version": "2.0.0",
  "private": true,
  "repository": {
    "url": "https://github.com/swashapp/extension.git"
  },
  "scripts": {
    "bundle": "parcel src/manifest.json src/entry/popup.html --host localhost --target webext-dev",
    "start": "web-ext run -t firefox-desktop --source-dir dist",
    "dev": "run-p -r bundle start",
    "build": "parcel build src/manifest.json src/entry/popup.html --target webext-prod",
    "postbuild": "web-ext build --source-dir dist",
    "lint:code": "eslint src/**/*.ts --fix",
    "lint:extension": "web-ext lint dist",
    "format": "prettier --write src/**/*.{js,jsx,ts,tsx,css,json} *.{js,jsx,ts,tsx}"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@parcel/config-webextension": "^2.0.0-nightly.2151",
    "@types/react": "^17.0.19",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.5",
    "parcel-plugin-web-extension": "^1.6.1",
    "prettier": "^2.3.2",
    "typescript": "^4.3.5",
    "web-ext": "^6.3.0"
  },
  "targets": {
    "webext-dev": {
      "sourceMap": {
        "inline": true,
        "inlineSources": true
      }
    },
    "webext-prod": {}
  }
}
