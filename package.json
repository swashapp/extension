{
  "name": "swash-extension",
  "version": "2.0.5",
  "private": true,
  "repository": {
    "url": "https://github.com/swashapp/extension.git"
  },
  "staticFiles": {
    "staticPath": [
      "src/core/configs",
      "src/core/modules"
    ]
  },
  "scripts": {
    "build:dev": "run-s clean && parcel build src/manifest.json src/dashboard/index.html src/popup/popup.html --target dev && run-s copy",
    "build:prod": "run-s clean:deep && parcel build src/manifest.json src/dashboard/index.html src/popup/popup.html --target prod && run-s copy",
    "bundle": "run-s copy && parcel src/manifest.json src/dashboard/index.html src/popup/popup.html --target dev",
    "clean": "shx rm -rf dist",
    "clean:deep": "shx rm -rf dist .parcel-cache",
    "precopy": "shx mkdir -p dist dist/core",
    "copy": "shx cp -r src/core/content_scripts src/core/configs src/core/modules dist/core/ && shx cp -r src/lib src/static dist/",
    "format": "prettier --write src/**/*.{js,jsx,ts,tsx,css,json} *.{js,jsx,ts,tsx}",
    "lint:code": "eslint src/**/*.ts --fix",
    "lint:extension": "web-ext lint dist",
    "run:chromium": "web-ext run -t chromium --source-dir dist",
    "run:firefox": "web-ext run -t firefox-desktop --source-dir dist",
    "start:chromium": "run-s copy && run-p bundle run:chromium",
    "start:firefox": "run-s copy && run-p bundle run:firefox"
  },
  "dependencies": {
    "@material-ui/core": "^4.12.3",
    "@types/react-scroll": "^1.8.3",
    "ethers": "5.0.23",
    "interweave": "^12.8.0",
    "js-sha256": "^0.9.0",
    "json-ptr": "^2.2.0",
    "jsonpath-plus": "^6.0.1",
    "jsontokens": "^3.0.0",
    "jsstore": "3.10.3",
    "mdbreact": "^5.1.0",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-collapse": "^5.1.0",
    "react-copy-to-clipboard": "^5.0.4",
    "react-dom": "^17.0.2",
    "react-joyride": "^2.3.1",
    "react-keyed-file-browser": "^1.13.1",
    "react-router-dom": "^5.2.0",
    "react-scroll": "^1.8.4",
    "react-share": "^4.4.0",
    "react-swipeable-views": "^0.14.0",
    "react-toastify": "^8.0.3",
    "react-widgets": "^5.2.0",
    "reactstrap": "^8.9.0",
    "remove": "^0.1.5",
    "streamr-client": "^5.4.4",
    "webextension-polyfill": "^0.8.0"
  },
  "devDependencies": {
    "@parcel/config-webextension": "^2.0.0",
    "@parcel/transformer-image": "2.0.0",
    "@types/react": "^17.0.19",
    "@types/react-copy-to-clipboard": "^5.0.2",
    "@types/react-dom": "^17.0.9",
    "@types/react-router-dom": "^5.1.8",
    "@types/react-swipeable-views": "^0.13.1",
    "@types/webextension-polyfill": "^0.8.0",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.0.0",
    "parcel-resolver-ignore": "^2.0.0",
    "prettier": "^2.3.2",
    "shx": "^0.3.3",
    "typescript": "^4.3.5",
    "web-ext": "^6.3.0"
  },
  "targets": {
    "dev": {
      "distDir": "dist",
      "optimize": false,
      "sourceMap": {
        "inline": true,
        "inlineSources": true
      }
    },
    "prod": {
      "distDir": "dist",
      "optimize": true
    }
  },
  "parcelIgnore": [
    "static/fonts/*.*",
    "static/images/*.*"
  ]
}
