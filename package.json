{
  "name": "swash-extension",
  "version": "2.0.0",
  "private": true,
  "repository": {
    "url": "https://github.com/swashapp/extension.git"
  },
  "scripts": {
    "firefox": "web-ext run -t firefox-desktop --source-dir dist",
    "start:dev": "run-p -r bundle firefox",
    "bundle:ui": "parcel src/index.html --host localhost --target webext-dev",
    "bundle": "parcel src/manifest.json src/index.html src/popup/popup.html --host localhost --target webext-dev",
    "build": "parcel build src/manifest.json src/index.html src/popup/popup.html --target webext-prod",
    "postbuild": "web-ext build --source-dir dist",
    "lint:code": "eslint src/**/*.ts --fix",
    "lint:extension": "web-ext lint dist",
    "format": "prettier --write src/**/*.{js,jsx,ts,tsx,css,json} *.{js,jsx,ts,tsx}"
  },
  "dependencies": {
    "3box": "1.17.1",
    "@material-ui/core": "^4.12.3",
    "ethers": "5.0.23",
    "identity-wallet": "1.1.0",
    "json-ptr": "1.1.1",
    "jsonpath-plus": "^6.0.1",
    "jsontokens": "^3.0.0",
    "jsstore": "3.10.3",
    "mdbreact": "^5.1.0",
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "react-collapse": "^5.1.0",
    "react-dom": "^17.0.2",
    "react-keyed-file-browser": "^1.13.1",
    "react-router-dom": "^5.2.0",
    "react-share": "^4.4.0",
    "react-widgets": "^5.2.0",
    "reactstrap": "^8.9.0",
    "remove": "^0.1.5",
    "streamr-client": "^5.4.4",
    "webextension-polyfill": "^0.8.0"
  },
  "devDependencies": {
    "@parcel/config-webextension": "^2.0.0-rc.0",
    "@parcel/transformer-image": "2.0.0-rc.0",
    "@types/3box": "^1.22.1",
    "@types/react": "^17.0.19",
    "@types/react-dom": "^17.0.9",
    "@types/react-router-dom": "^5.1.8",
    "@types/webextension-polyfill": "^0.8.0",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.0.0-rc.0",
    "prettier": "^2.3.2",
    "typescript": "^4.3.5",
    "web-ext": "^6.3.0"
  },
  "targets": {
    "webext-dev": {
      "sourceMap": {
        "inline": true,
        "inlineSources": true
      }
    },
    "webext-prod": {}
  }
}
